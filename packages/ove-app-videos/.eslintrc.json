{
    "extends": "standard",
    "globals": {
        "$": true,
        "Constants": true,
        "fetch": true,
        "location": true,
        "OVE": true
    },
    "overrides": [
        {
            "files": [ "**/view/*.js" ],
            "globals": {
                "initView": true,
                "logger": true
            }
        },
        {
            "files": [ "**/control/*.js" ],
            "globals": {
                "initControl": true,
                "logger": true
            }
        },
        {
            "files": [ "**/common/*.js" ],
            "globals": {
                "handleStateChange": true
            }
        },
        {
            "files": [ "**/constants/*.js" ],
            "rules": {
                "no-unused-vars": ["error", {
                    "vars": "all",
                    "args": "none",
                    "ignoreRestSiblings": true,
                    "varsIgnorePattern": "Constants"}]
            }
        },
        {
            "files": [ "**/players/*.js" ],
            "rules": {
                "no-unused-vars": ["error", {
                    "vars": "all",
                    "args": "none",
                    "ignoreRestSiblings": true,
                    "varsIgnorePattern": "OVE.*Player"}]
            }
        },
        {
            "files": [ "**/*.js" ],
            "globals": {
                "doRegistration": true,
                "handleBufferStatusChange": true,
                "initCommon": true,
                "beginInitialization": true,
                "loadURL": true,
                "refresh": true,
                "requestRegistration": true
            }
        }
    ],
    "rules": {
        "indent": ["error", 4, {
            "SwitchCase": 1,
            "VariableDeclarator": 1,
            "outerIIFEBody": 1,
            "MemberExpression": 1,
            "FunctionDeclaration": { "parameters": 1, "body": 1 },
            "FunctionExpression": { "parameters": 1, "body": 1 },
            "CallExpression": { "arguments": 1 },
            "ArrayExpression": 1,
            "ObjectExpression": 1,
            "ImportDeclaration": 1,
            "flatTernaryExpressions": false,
            "ignoreComments": false
        }],
        "semi": ["error", "always"]
    }
}
