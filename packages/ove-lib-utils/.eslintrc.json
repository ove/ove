{
    "env": {
        "jest/globals": true
    },
    "extends": "standard",
    "overrides": [
        {
            "files": [ "**/test/resources/**/*.js" ],
            "globals": {
                "initCommon": true,
                "initControl": true,
                "initView": true
            }
        }
    ],
    "rules": {
        "indent": ["error", 4, {
            "SwitchCase": 1,
            "VariableDeclarator": 1,
            "outerIIFEBody": 1,
            "MemberExpression": 1,
            "FunctionDeclaration": { "parameters": 1, "body": 1 },
            "FunctionExpression": { "parameters": 1, "body": 1 },
            "CallExpression": { "arguments": 1 },
            "ArrayExpression": 1,
            "ObjectExpression": 1,
            "ImportDeclaration": 1,
            "flatTernaryExpressions": false,
            "ignoreComments": false
        }],
        "semi": ["error", "always"]
    },
    "plugins": ["jest"]
}
